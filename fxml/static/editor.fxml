<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditorController">
   <bottom>
      <HBox fillHeight="false" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#apply" style="-fx-border-color: #00A900;" styleClass="editor-footer-buttons">
               <graphic>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label minWidth="50.0" text="Apply" textFill="#00a900" />
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/apply.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
               </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#cancel" styleClass="editor-footer-buttons" textFill="#d10000">
               <graphic>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label minWidth="50.0" styleClass="text-color1" text="Cancel" />
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/cross.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
               </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#delete" style="-fx-border-color: #A10000;" styleClass="editor-footer-buttons">
               <graphic>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label minWidth="50.0" text="Delete" textFill="#d10000" underline="true" />
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/delete.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
               </graphic>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets left="20.0" right="20.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <top>
      <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="headerName" text="Letter: ">
               <styleClass>
                  <String fx:value="title" />
                  <String fx:value="text-color1" />
               </styleClass>
            </Label>
            <Label fx:id="headerObject" graphicTextGap="0.0" text="âˆ‚">
               <styleClass>
                  <String fx:value="title" />
                  <String fx:value="text-rainbow" />
               </styleClass>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Label>
         </children>
      </HBox>
   </top>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <center>
      <ScrollPane fitToWidth="true" fx:id="content">
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin>
      </ScrollPane>
   </center>
</BorderPane>
