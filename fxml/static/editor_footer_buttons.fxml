<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>


<HBox fillHeight="false" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controller.EditorFooterController" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button mnemonicParsing="false" style="-fx-border-color: #00A900;" styleClass="editor-footer-buttons" onAction="#apply">
         <graphic>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label minWidth="50.0" text="Apply" textFill="#00a900" />
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/apply.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </graphic>
      </Button>
      <Button mnemonicParsing="false" styleClass="editor-footer-buttons" textFill="#d10000" onAction="#cancel">
         <graphic>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <Label minWidth="50.0" styleClass="text-color1" text="Cancel" />
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/cross.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </graphic>
      </Button>
      <Button mnemonicParsing="false" style="-fx-border-color: #A10000;" styleClass="editor-footer-buttons" onAction="#delete">
         <graphic>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label minWidth="50.0" text="Delete" textFill="#d10000" underline="true" />
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/delete.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </graphic>
      </Button>
   </children>
</HBox>
